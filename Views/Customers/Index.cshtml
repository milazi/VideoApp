@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <text> We don't any customers yet</text>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
        </tr>
        @foreach (var cust in Model)
        {
            <tr>
                <td> @Html.ActionLink(cust.Name, "Details", "Customers", new { id = cust.Id}, null ) </td>
                <td> @cust.Membership.Name </td>
            </tr>
        }
    </table>

}
